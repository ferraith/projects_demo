########################################################################################################################
#
# Project: AOAA Board Library
#
# Description:
# SConscript used to build the AOAA Board Library.
#
########################################################################################################################
#
# Configuration
#
#============================== Common =================================================================================

Import('env')

########################################################################################################################
#
# Project Files
#
#============================== Source Directories =====================================================================
env['PROJ_SRC_DIRS']  = Glob('aoaa_board/*.cc')

#============================== Header Directories =====================================================================
env['PROJ_INC_DIRS']  = ['.']

#============================== Object Directories =====================================================================
# PROJ_OBJ_DIRS  =


env['CPPPATH'] = [env['PLTF_INC_DIRS'], env['PROJ_INC_DIRS']]

t = env.StaticLibrary(target=env['PROJ_NAME'], source=env['PROJ_SRC_DIRS'])

Default(t)